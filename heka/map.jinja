{%- load_yaml as server_defaults %}
Debian:
  pkgs:
  - heka
  - heka-lua-scripts
  user:
  - heka
  groups:
  - adm
  - syslog
  service:
  - heka
  filter: {}
  splitter: {}
  encoder: {}
  decoder: {}
RedHat:
  groups:
  - adm
  service:
  - heka
  pkgs:
  - heka
{%- endload %}

{%- set server = salt['grains.filter_by'](server_defaults, merge=salt['pillar.get']('heka:server')) %}

